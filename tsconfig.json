{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./src"
  },
  "files": [
    "src/index.ts",
    "src/swagger-client.ts",
    "src/swagger-error.ts",
    "src/swagger-server.ts",
    "typings/index.d.ts"
  ],

  "exclude": [
    "node_modules",
    "atmosphere-packages"
  ]
}